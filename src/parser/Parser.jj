/**
 * Defines program expressions.
 */ 
void Start() 
    throws WrongTypeException, 
           UndefinedFunctionException :
{
    String s;
    HashMap<String,String> main = new HashMap<String,String>();
}    
{
    { scope.push(main); }
    (
        (   
            (
                header()
                (
                    function()
                )
                |
                (
                    <EOL>
                )
            )
            |
            (
                s = expression()
                { insert("POP"); }
                <EOL>
            )
            |
            <EOL>
        )
        { say("--------------------------------"); }
    )*
}

